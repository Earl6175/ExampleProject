<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_25"
    android:paddingRight="@dimen/margin_25"
    android:paddingBottom="@dimen/margin_25" >

    <FrameLayout
        android:id="@id/imageview"
        android:layout_width="@dimen/imagesize_2"
        android:layout_height="@dimen/imagesize_2"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20" >

        <ImageView
            android:id="@id/imageview_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:contentDescription="@string/contentdescription"
            android:src="@drawable/ic_point" />

        <ImageView
            android:layout_width="@dimen/imagesize_2"
            android:layout_height="@dimen/imagesize_2"
            android:contentDescription="@string/contentdescription"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:src="@drawable/ic_logo" />

    </FrameLayout>

    <TextView
        android:id="@id/textview_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_toRightOf="@id/imageview"
        android:text="@string/app_name"
        android:textColor="@color/qianhui"
        android:textSize="@dimen/textsize_7" />

    <TextView
        android:id="@id/textview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_toRightOf="@id/textview_0"
        android:gravity="right"
        android:text="2014-12-25"
        android:textColor="@color/qianhui"
        android:textSize="@dimen/textsize_7" />

    <TextView
        android:id="@id/textview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_0"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_toRightOf="@id/imageview"
        android:gravity="left"
        android:text="2014-12-25"
        android:textColor="@color/set"
        android:textSize="@dimen/textsize_8" />

</RelativeLayout>