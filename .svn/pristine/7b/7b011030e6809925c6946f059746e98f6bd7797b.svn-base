<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_LinearLayout" >

    <!-- 标题栏 -->

    <include layout="@layout/title_text" />

    <EditText
        android:id="@id/edittext_0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@color/white"
        android:hint="@string/inputoldpwd"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/margin_25"
        android:paddingLeft="@dimen/margin_25"
        android:paddingRight="@dimen/margin_25"
        android:paddingTop="@dimen/margin_25"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/qianhui"
        android:textSize="@dimen/textsize_8" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:contentDescription="@string/contentdescription"
        android:paddingLeft="@dimen/margin_25"
        android:src="@color/background" />

    <EditText
        android:id="@id/edittext_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/inputnewpwd"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/margin_25"
        android:paddingLeft="@dimen/margin_25"
        android:paddingRight="@dimen/margin_25"
        android:paddingTop="@dimen/margin_25"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/qianhui"
        android:textSize="@dimen/textsize_8" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:contentDescription="@string/contentdescription"
        android:paddingLeft="@dimen/margin_25"
        android:src="@color/background" />

    <EditText
        android:id="@id/edittext_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/inputnewpwdagain"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/margin_25"
        android:paddingLeft="@dimen/margin_25"
        android:paddingRight="@dimen/margin_25"
        android:paddingTop="@dimen/margin_25"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/qianhui"
        android:textSize="@dimen/textsize_8" />

    <Button
        android:id="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_80"
        android:layout_marginTop="@dimen/margin_80"
        android:background="@drawable/btn_login"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_9" />

</LinearLayout>