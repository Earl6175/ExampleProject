<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_LinearLayout" >
    
    <!-- 标题栏 -->
    <include layout="@layout/title_text"/>
    
    <FrameLayout 
        android:id="@id/layout_0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_70"
        android:layout_marginBottom="@dimen/margin_60">
        
        <ImageView 
            android:id="@id/imageview"
            android:layout_width="@dimen/imagesize_0"
            android:layout_height="@dimen/imagesize_0"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:contentDescription="@string/contentdescription"/>
        
        <ImageView 
            android:id="@id/imageview_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="@dimen/margin_85"
            android:contentDescription="@string/contentdescription"/>
    </FrameLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="@drawable/divier_name_password"
        android:contentDescription="@string/contentdescription"/>
    
    <!-- 昵称 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@id/textview_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_weight="2.5"
            android:text="@string/nickname"
            android:textColor="@color/set"
            android:textSize="@dimen/textsize_9"/>
        
        <EditText 
            android:id="@id/edittext_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_25"
            android:background="@color/white"
            android:hint="@string/nicklength"
            android:layout_weight="1"
            android:textColorHint="@color/qianhui"
            android:textSize="@dimen/textsize_9"
            android:textColor="@color/black"/>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_90"
        android:src="@drawable/divier_name_password"
        android:contentDescription="@string/contentdescription"/>
    
    <!-- 个性签名 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@id/textview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_weight="2.5"
            android:text="@string/personalinfor"
            android:textColor="@color/set"
            android:textSize="@dimen/textsize_9"/>
        
        <EditText 
            android:id="@id/edittext_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_25"
            android:background="@color/white"
            android:hint="@string/signlength"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColorHint="@color/qianhui"
            android:textSize="@dimen/textsize_9"
            android:textColor="@color/black"/>
    </LinearLayout>
    
</LinearLayout>
